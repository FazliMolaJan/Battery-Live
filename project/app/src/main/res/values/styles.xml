<?xml version="1.0" encoding="utf-8"?>

<!-- styles & themes -->

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- theme for main activity -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorAccent">?attr/customAccent</item>
        <item name="colorPrimary">?attr/primaryAccent</item>
        <item name="colorPrimaryDark">?attr/secondaryAccent</item>
        <item name="android:listSeparatorTextViewStyle">@style/ListSeparatorTextView</item>
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Custom.Widget.Toolbar.Button.Navigation
        </item>
        <item name="actionOverflowButtonStyle">@style/Custom.Widget.ActionButton.Overflow</item>
        <item name="android:homeAsUpIndicator">?attr/close_icon</item>
        <item name="theme_background">@android:color/white</item>
        <item name="close_icon">@drawable/ic_close</item>
        <item name="info_icon">@drawable/ic_information</item>
        <item name="customAccent">@color/backgroundDark</item>
        <item name="primaryAccent">@color/backgroundDark</item>
        <item name="secondaryAccent">@color/backgroundDark</item>

    </style>

    <!-- theme dark for main activity -->
    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorAccent">?attr/customAccent</item>
        <item name="colorPrimary">?attr/primaryAccent</item>
        <item name="colorPrimaryDark">?attr/secondaryAccent</item>
        <item name="android:listSeparatorTextViewStyle">@style/ListSeparatorTextView</item>
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Custom.Widget.Toolbar.Button.Navigation
        </item>
        <item name="actionOverflowButtonStyle">@style/Custom.Widget.ActionButton.Overflow</item>
        <item name="android:homeAsUpIndicator">?attr/close_icon</item>
        <item name="close_icon">@drawable/ic_close_dark</item>
        <item name="info_icon">@drawable/ic_information_dark</item>
        <item name="theme_background">@color/backgroundDark</item>
        <item name="customAccent">@android:color/white</item>
        <item name="primaryAccent">@android:color/white</item>
        <item name="secondaryAccent">@android:color/white</item>

    </style>

    <!-- theme darker for main activity -->
    <style name="AppThemeDarker" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorAccent">?attr/customAccent</item>
        <item name="colorPrimary">?attr/primaryAccent</item>
        <item name="colorPrimaryDark">?attr/secondaryAccent</item>
        <item name="android:listSeparatorTextViewStyle">@style/ListSeparatorTextView</item>
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Custom.Widget.Toolbar.Button.Navigation
        </item>
        <item name="actionOverflowButtonStyle">@style/Custom.Widget.ActionButton.Overflow</item>
        <item name="android:homeAsUpIndicator">?attr/close_icon</item>
        <item name="theme_background">@android:color/background_dark</item>
        <item name="close_icon">@drawable/ic_close_dark</item>
        <item name="info_icon">@drawable/ic_information_dark</item>
        <item name="customAccent">@android:color/white</item>
        <item name="primaryAccent">@android:color/white</item>
        <item name="secondaryAccent">@android:color/white</item>
    </style>

    <!-- Preference category theme -->
    <style name="ListSeparatorTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Responsive toolbar -->
    <style name="Custom.Widget.Toolbar" parent="Widget.AppCompat.Toolbar">

        <item name="maxButtonHeight">48dp</item>
        <item name="android:paddingLeft">@dimen/toolbar_h_padding</item>
        <item name="android:paddingRight">@dimen/toolbar_h_padding</item>
        <item name="contentInsetStart">@dimen/first_keyline</item>
    </style>

    <style name="Custom.Widget.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="Custom.Widget.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>
</resources>